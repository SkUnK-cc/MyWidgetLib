<?xml version="1.0" encoding="utf-8"?>
<resources>
    //圆角图片
    <attr format="dimension" name="borderRadius"/>
    <attr name="type">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius"/>
        <attr name="type"/>
    </declare-styleable>

    //StrokeTextView
    <declare-styleable name="StrokeTextView">
        <attr name="outerColor" format="color|reference"/>
        <attr name="innerColor" format="color|reference"/>
    </declare-styleable>

    // NumImageView
    <declare-styleable name="NumImageView">
        <attr name="textSize" format="dimension"/>
        <attr name="textMargin" format="dimension"/>
        <attr name="pointColor" format="color|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="show" format="boolean"/>
        <attr name="pointText" format="string"/>
    </declare-styleable>
</resources>